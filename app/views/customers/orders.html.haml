%h1 My orders
%hr

%ul.product-list
  - @variables['shopping_orders'].each do |order|
    %li
      %div{:class => 'row order_highlight'}
        %div.col-md-9
          %div.col-md-3
            ORDER DATE
            %br
            = l order.created_at, :format => :long
          %div.col-md-3
            TOTAL
            %br
            = "#{order.total_retail_price} €"
        %div.col-md-3
          %div.pull-right
            = "ORDER N.º #{order.id}"
            %br
            Details
            |
            = link_to 'Invoice', orders_invoice_customers_path(order.id), target: '_blank'
      %div{:class => 'order_container'}
        - order.shopping_orders_products.each do |sop|
          - product = sop.product
          %div.row
            %div.col-md-6
              %div{:class => 'col-md-3'}
                = image_tag product.retrieve_main_image(:thumbnail)
              %div{:class => 'col-md-9'}
                %div.col-md-12
                  = link_to product.name, show_slug_products_path(product.slug)
                %br
                %div.col-md-12
                  = "Quantity: #{sop.quantity}"

                %div{class: 'col-md-12 a-color-price'}
                  = "#{sop.retail_price} €"

                %div.col-md-6
                  = link_to 'Buy another', add_to_shopping_cart_products_path(product), :class => 'btn btn-default btn-block'
