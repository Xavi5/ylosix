-# Navigation
%nav{:class => 'navbar navbar-inverse navbar-fixed-top', :role => 'navigation'}
  %div.container
    -# Brand and toggle get grouped for better mobile display
    %div.navbar-header
      %button{:type => 'button', :class => 'navbar-toggle', 'data-toggle' => 'collapse', 'data-target' => '#bs-example-navbar-collapse-1'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      %a.navbar-brand{:href => root_path}
        Start Bootstrap

    -# Collect the nav links, forms, and other content for toggling
    %div{:class => 'collapse navbar-collapse', :id => 'bs-example-navbar-collapse-1'}
      %ul{:class => 'nav navbar-nav collapse navbar-collapse pull-right'}
        %li
          %a About

        - unless @variables.nil?
          - @variables['languages'].each do |lang|
            - image_src = ''
            - image_src = lang.flag.url(:medium) if lang.flag.file?

            %li
              %a{href: change_locale_path(lang.locale)}
                = image_tag image_src, { alt: lang.locale, title: lang.name}

        %li.dropdown
          %a{href: show_customers_path, class: 'text-fade'}
            My account
            %span.caret
          %ul.dropdown-menu
            - if customer_signed_in?
              %li.dropdown
                = link_to 'My account', show_customers_path
              %li.dropdown
                = link_to 'My orders', '#todo'
              %li.dropdown
                = link_to 'Wish list', '#todo'
              %li.dropdown
                = link_to 'Logout', destroy_customer_session_path, :method => :delete
            - else
              %li.dropdown
                = link_to 'Login', new_customer_session_path

        %li
          = link_to 'My cart', shopping_carts_customers_path