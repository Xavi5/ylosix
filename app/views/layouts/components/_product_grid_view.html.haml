%div{:class => 'col-sm-4 col-lg-4 col-md-4'}
  %div.thumbnail
    -# TODO image 320x150
    %a{:href => show_slug_products_path(product.slug)}
      - if product.image.file?
        = image_tag(product.image.url(:medium), :class => 'img-responsive')
      - else
        %img{:src => 'http://placehold.it/320x150', :alt => '', :class => 'img-responsive'}

    %div.caption
      %h4.pull-right
        = "#{product.retail_price} â‚¬"
      %h4
        %a{:href => show_slug_products_path(product.slug)}
          = product.name

      %p
        = product.short_description

    %div.ratings
      %p.pull-right
        15 reviews
      %p
        %span{:class => 'glyphicon glyphicon-star'}
        %span{:class => 'glyphicon glyphicon-star'}
        %span{:class => 'glyphicon glyphicon-star'}
        %span{:class => 'glyphicon glyphicon-star'}
        %span{:class => 'glyphicon glyphicon-star-empty'}

    %div.btn-add-cart
      = link_to 'Add to cart', add_to_shopping_cart_products_path(product), :class => 'btn btn-success btn-block'