%div{:class => 'col-sm-4 col-lg-4 col-md-4'}
  %div.thumbnail
    -# TODO image 320x150
    %a{:href => product.href}
      = image_tag(product.retrieve_main_image(:medium), :class => 'img-responsive')

    %div.row
      %div.col-md-8
        %h4
          %a{:href => product.href}
            = product.name
      %div.col-md-4
        %h5.pull-right
          = "#{product.retail_price} â‚¬"

    %div.row
      %div.col-md-12
        %p
          = product.short_description

    %div.ratings
      %p.pull-right
        15 reviews
      %p
        %span{:class => 'glyphicon glyphicon-star'}
        %span{:class => 'glyphicon glyphicon-star'}
        %span{:class => 'glyphicon glyphicon-star'}
        %span{:class => 'glyphicon glyphicon-star'}
        %span{:class => 'glyphicon glyphicon-star-empty'}

    %div.btn-add-cart
      = link_to 'Add to cart', add_to_shopping_cart_products_path(product), :class => 'btn btn-success btn-block'