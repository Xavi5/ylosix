!!! 5
%html
  %head
    = render 'layouts/header'
  %body.shop
    = render 'layouts/components/nav_bar'

    -# Page Content
    %div.container
      %div.row
        = render 'layouts/components/notice_messages'
      %div.row
        = yield

    = render 'layouts/components/footer'
    = Utils.append_debug_variables(@variables, '').html_safe

  - if Rails.env.development? || (!@variables.nil? && @variables['debug_console'] == 1)
    = console