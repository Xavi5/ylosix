!!! 5
%html
  %head
    = render 'layouts/header'

    - unless @head_javascript.blank?
      %script{:type => 'text/javascript'}
        = @head_javascript.html_safe

    - unless @head_css.blank?
      %style{:type => 'text/css'}
        = @head_css.html_safe

  %body
    = @body_content.html_safe

    - if Rails.env.development? || (!@variables.nil? && @variables['debug_console'] == 1)
      = console if Rails.env.development?
