%h1 Order

- sc = @variables['shopping_cart']
%ul.list-unstyled
  %li
    %div.row
      %div{class: 'col-md-6 col-xs-6'}
      %div{class: 'col-md-3 col-xs-3'}
        Price
      %div{class: 'col-md-3 col-xs-3'}
        Quantity

  - sc.shopping_carts_products.each do |scp|
    - product = scp.product
    %li.sc-list-item-border

      %div.row
        %div{class: 'col-md-6 col-xs-6'}
          %div.row
            %div{:class => 'item-image col-md-3'}
              = image_tag product.retrieve_main_image(:thumbnail)
            %div{:class => 'col-md-9 col-xs-12'}
              = product.name
        %div{class: 'col-md-3 col-xs-3'}
          %div.a-color-price
            = "#{product.retail_price} €"
        %div{class: 'col-md-3 col-xs-3'}
          = scp.quantity

  %li.sc-list-item-border
    %div.row
      %div{class: 'col-md-6'}
      %div{class: 'col-md-6 col-xs-12'}
        %div.pull-right
          %span
            = "Subtotal (#{sc.total_products} products): "
          %span.a-color-price
            = "#{sc.total_retail_price} €"

%div{class: 'row voffset3'}
  %div{class: 'col-md-6'}
    %h4 Shipping address
    %hr
    - if sc.shipping_address.nil?
      = link_to 'Select shipping address', addresses_customers_shopping_orders_path('shipping_address_id')
    - else
      = link_to 'Select other shipping address', addresses_customers_shopping_orders_path('shipping_address_id')
      = render partial: 'addresses/address', locals: {address: sc.shipping_address}

  %div{class: 'col-md-6'}
    %h4 Billing address
    %hr
    - if sc.billing_address.nil?
      = link_to 'Select billing address', addresses_customers_shopping_orders_path('billing_address_id')
    - else
      = link_to 'Select other billing address', addresses_customers_shopping_orders_path('billing_address_id')
      = render partial: 'addresses/address', locals: {address: sc.billing_address}

%div{class: 'row voffset6'}
  %div{class: 'col-md-12'}
    = link_to 'Continue shopping', @variables['commerce']['root_href'], class: 'btn btn-default btn-block'
    = link_to 'Finalize', finalize_customers_shopping_orders_path, class: 'btn btn-success btn-block'
